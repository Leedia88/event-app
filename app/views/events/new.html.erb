<div class="container mt-4">

<div class="col-md-6">

<h2>Créer un événement</h2>

<%=form_for :event, url: events_path do |f|%>
    <%if @event.errors.any? %>
        <% @event.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger"><%=msg%></div>
        <%end%>
    <%end%>
<p> <br> 
 <%= f.hidden_field(:admin_id, {:value => current_user.id, :readonly => "readonly"}) %>
</p>
<p>
<%= f.label :start_date%> <br> 
<%= f.date_field(:start_date, {:class => "form-control"})%>
</p>
<p>
<%= f.label :duration%> <br>
<%= f.text_field(:duration, {:class => "form-control"})%>
</p>
<p>
<%= f.label :title%> <br>
<%= f.text_field(:title, {:class => "form-control"})%>
</p>
<p>
<%= f.label :description%> <br>
<%= f.text_area(:description, {:class => "form-control"})%>
</p>
<p>
<%= f.label :"price"%> <br>
<%= f.text_field(:"price", {:class => "form-control"})%>
</p>
<p>
<%= f.label :location%> <br>
<%= f.text_field(:location, {:class => "form-control"})%>
</p>

<p>
<br><%= f.submit({:class => "card-link btn btn-light"}) %>
<%=link_to "Annuler", events_path, :class => "card-link btn btn-light"%>
</p>
<%end%>
</div>
</div>