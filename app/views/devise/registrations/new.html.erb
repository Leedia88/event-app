<div class="container">

<div class="row">

<div class="col-md-6 offset-md-3">

<br><br><br>





<h2 class="h3 mb-3 font-weight-normal">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="form-group">
    <%= f.label(:password, "Mot de passe") %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caractères minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label(:password_confirmation, "Confirme le mot de passe") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label(:first_name, "Prénom") %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "Prénom" %>
  </div>
  <div class="form-group">
    <%= f.label(:last_name, "Nom") %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "Nom" %>
  </div>

<div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, autofocus: true, autocomplete: "Description" %>
  </div>

  <div class="actions mt-5">
    <%= f.submit "S'inscrire" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div></div></div>
